generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
  binaryTargets = ["native", "debian-openssl-1.1.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model sensors_data {
  id          Int      @id @default(autoincrement())
  device_id   String
  templand    Float
  turbidity   Float
  ph          Float
  watertemp   Float
  humidity    Float
  isipakan    Float
  waterlevel  Int
  timestamp   DateTime @updatedAt
}

model food_data {
  id          Int      @id @default(autoincrement())
  food_id     String      
  food        Int
  timestamp   DateTime @updatedAt
}

model hour_data {
  id          Int      @id @default(autoincrement())
  time_id     String
  hour        Int
  minute      Int
  isactive    Boolean
  timestamp   DateTime @updatedAt
}